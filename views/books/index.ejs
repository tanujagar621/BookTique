<h2 class="heading">Search Books</h2>
<form action="/books" class="search-form" method="get">
    <div class="field">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= searchOptions.title %>">
    </div>
    <div class="field">
        <label for="publishedAfter">Published After</label>
        <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
    </div>
    <div class="field">
        <label for="publishedBefore">Published Before</label>
        <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
    </div>
    <button class="btn" type="submit">Search</button>
</form>
<br>
<div>
    <h2 class="heading">All Books</h2>
    <div class="books">
        <% books.forEach(book=> { %>
            <div class="book">
                    <a href="/books/<%= book.id %>">
                    <img height="150" width="100" src="<%= book.coverImagePath %> ">
                    <div class="title">
                        <h2>
                            <%= book.title %>
                        </h2>
                    </div>
                    </a>
                </div>
        <% }); %>
    </div>
</div>
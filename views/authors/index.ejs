<h2 class="heading">Search Authors</h2>
<form action="/authors" class="search-form" method="get">
    <div class="field">
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <button class="btn" type="submit">Search</button>
</form>
<br>
<h2>All Authors</h2>
<div class="authors">
    <% authors.forEach(author => { %>
        <div class="author"><%= author.name %> </div>
        <br>
    <% }); %> 
</div>